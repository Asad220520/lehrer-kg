  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Asad220520/lehrer-kg/issues"
  },
  "homepage": "https://github.com/Asad220520/lehrer-kg#readme",
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "tailwindcss": "^4.1.18"
  }
}
